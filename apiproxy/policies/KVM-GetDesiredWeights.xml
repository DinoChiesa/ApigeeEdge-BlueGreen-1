<KeyValueMapOperations name='KVM-GetDesiredWeights' mapIdentifier='settings'>
  <Scope>environment</Scope>
  <ExpiryTimeInSecs>15</ExpiryTimeInSecs>
  <Get assignTo='weights'>
    <Key>
      <Parameter>targets-and-weights</Parameter>
      <!--
      The data should be shaped like this:
        {
          "values" : [ [ "AAAAA", 50 ], [ "BBBBB", 30 ], [ "CCCCC", 10 ] ]
        }
      -->
    </Key>
  </Get>
</KeyValueMapOperations>
